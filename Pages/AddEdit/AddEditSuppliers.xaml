<Page x:Class="Diploma.Pages.AddEdit.AddEditSuppliers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Diploma.Pages.AddEdit"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditSuppliers">

    <Grid>
        <StackPanel Orientation="Horizontal">
            <StackPanel>
                <TextBlock Style="{StaticResource BasicText}" Text="Назв. организации" TextAlignment="Center" FontSize="16" Width="150" Margin="5" Height="30"/>
                <TextBlock Style="{StaticResource BasicText}" Text="ФИО поставщика" TextAlignment="Center" FontSize="16" Width="150" Margin="5" Height="30"/>
                <TextBlock Style="{StaticResource BasicText}" Text="Номер телефона" TextAlignment="Center" FontSize="16" Width="150" Margin="5" Height="30"/>
                <TextBlock Style="{StaticResource BasicText}" Text="Адрес организации" TextAlignment="Center" FontSize="16" Width="150" Margin="5" Height="30"/>

                <Button Style="{StaticResource BasicButton}" Content="Сохранить" Width="150" Height="30" Margin="5,45,5,5" Click="Save_Click"/>
                <Button Style="{StaticResource BasicButton}" Content="Отмена" Width="150" Height="30" Margin="5" Click="Cancel_Click"/>
            </StackPanel>
            <StackPanel>
                <TextBox Style="{StaticResource BasicTextbox}" Text="{Binding supplier_orgname}" Width="150" Margin="5" Height="30"/>
                <TextBox Style="{StaticResource BasicTextbox}" Text="{Binding supplier_name}" Width="150" Margin="5" Height="30"/>
                <TextBox Style="{StaticResource BasicTextbox}" Text="{Binding supplier_phone}" Width="150" Margin="5" Height="30"/>
                <TextBox Style="{StaticResource BasicTextbox}" Text="{Binding supplier_address}" Width="150" Margin="5" Height="30"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
