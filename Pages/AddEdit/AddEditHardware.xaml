<Page x:Class="PRKTK030225.Pages.AddEdit.AddEditHardware"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PRKTK030225.Pages.AddEdit"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditHardware">

    <Grid>
        <StackPanel Orientation="Horizontal">
            <StackPanel>
                <TextBlock Style="{StaticResource BasicText}" Text="Название" TextAlignment="Center" FontSize="16" Width="150" Margin="5" Height="30"/>
                <TextBlock Style="{StaticResource BasicText}" Text="Состояние" TextAlignment="Center" FontSize="16" Width="150" Margin="5" Height="30"/>
                <TextBlock Style="{StaticResource BasicText}" Text="ИД типа" TextAlignment="Center" FontSize="16" Width="150" Margin="5" Height="30"/>
                <TextBlock Style="{StaticResource BasicText}" Text="ИД отв. лица" TextAlignment="Center" FontSize="16" Width="150" Margin="5" Height="30"/>
                <TextBlock Style="{StaticResource BasicText}" Text="ИД поставщика" TextAlignment="Center" FontSize="16" Width="150" Margin="5" Height="30"/>
                <TextBlock Style="{StaticResource BasicText}" Text="ИД посл. движения" TextAlignment="Center" FontSize="16" Width="150" Margin="5" Height="30"/>
                <TextBlock Style="{StaticResource BasicText}" Text="ИД посл. ремонта" TextAlignment="Center" FontSize="16" Width="150" Margin="5" Height="30"/>
                <TextBlock Style="{StaticResource BasicText}" Text="Количество" TextAlignment="Center" FontSize="16" Width="150" Margin="5" Height="30"/>

                <Button Style="{StaticResource BasicButton}" Content="Сохранить" Width="150" Height="30" Margin="5,50,5,5" Click="Save_Click"/>
                <Button Style="{StaticResource BasicButton}" Content="Отмена" Width="150" Height="30" Margin="5" Click="Cancel_Click"/>
            </StackPanel>
            <StackPanel>
                <TextBox Style="{StaticResource BasicTextbox}" Text="{Binding HARD_NAME}" Width="150" Margin="5" Height="30"/>
                <TextBox Style="{StaticResource BasicTextbox}" Text="{Binding HARD_STATUS}" Width="150" Margin="5" Height="30"/>
                <TextBox Style="{StaticResource BasicTextbox}" Text="{Binding HARDTYPE_ID}" Width="150" Margin="5" Height="30"/>
                <TextBox Style="{StaticResource BasicTextbox}" Text="{Binding Personnel_ID}" Width="150" Margin="5" Height="30"/>
                <TextBox Style="{StaticResource BasicTextbox}" Text="{Binding Supplier_ID}" Width="150" Margin="5" Height="30"/>
                <TextBox Style="{StaticResource BasicTextbox}" Text="{Binding Movement_ID}" Width="150" Margin="5" Height="30"/>
                <TextBox Style="{StaticResource BasicTextbox}" Text="{Binding Repair_ID}" Width="150" Margin="5" Height="30"/>
                <TextBox Style="{StaticResource BasicTextbox}" Text="{Binding HARD_QUANTITY}" Width="150" Margin="5" Height="30"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
