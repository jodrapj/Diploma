<Page x:Class="PRKTK030225.Pages.AddEdit.AddEditHardware"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PRKTK030225.Pages.AddEdit"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditHardware">

    <Grid>
        <DockPanel LastChildFill="True" Width="500">
            <StackPanel DockPanel.Dock="Left">
                <TextBlock Text="HARD_NAME" TextAlignment="Center" FontSize="16" Width="150" Margin="5" Height="30"/>
                <TextBox Text="{Binding HARD_NAME}" Width="150" Margin="5" Height="30"/>
                <TextBlock Text="HARD_STATUS" TextAlignment="Center" FontSize="16" Width="150" Margin="5" Height="30"/>
                <TextBox Text="{Binding HARD_STATUS}" Width="150" Margin="5" Height="30"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="HARDTYPE_ID" TextAlignment="Center" FontSize="16" Width="150" Margin="5" Height="30"/>
                <TextBox Text="{Binding HARDTYPE_ID}" Width="150" Margin="5" Height="30"/>
                <TextBlock Text="Personnel_ID" TextAlignment="Center" FontSize="16" Width="150" Margin="5" Height="30"/>
                <TextBox Text="{Binding Personnel_ID}" Width="150" Margin="5" Height="30"/>
                <TextBlock Text="Supplier_ID" TextAlignment="Center" FontSize="16" Width="150" Margin="5" Height="30"/>
                <TextBox Text="{Binding Supplier_ID}" Width="150" Margin="5" Height="30"/>
                <Button Content="Сохранить" Width="150" Height="30" Margin="5,50,5,5" Click="Save_Click"/>
                <Button Content="Отмена" Width="150" Height="30" Margin="5" Click="Cancel_Click"/>
            </StackPanel>
            <StackPanel DockPanel.Dock="Right">
                <TextBlock Text="Movement_ID" TextAlignment="Center" FontSize="16" Width="150" Margin="5" Height="30"/>
                <TextBox Text="{Binding Movement_ID}" Width="150" Margin="5" Height="30"/>
                <TextBlock Text="Repair_ID" TextAlignment="Center" FontSize="16" Width="150" Margin="5" Height="30"/>
                <TextBox Text="{Binding Repair_ID}" Width="150" Margin="5" Height="30"/>
                <TextBlock Text="HARD_QUANTITY" TextAlignment="Center" FontSize="16" Width="150" Margin="5" Height="30"/>
                <TextBox Text="{Binding HARD_QUANTITY}" Width="150" Margin="5" Height="30"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Page>
