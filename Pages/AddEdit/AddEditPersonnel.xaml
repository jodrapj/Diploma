<Page x:Class="PRKTK030225.Pages.AddEdit.AddEditPersonnel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PRKTK030225.Pages.AddEdit"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditPersonnel">

    <Grid>
        <DockPanel LastChildFill="True" Width="500">
            <StackPanel DockPanel.Dock="Left">
                <TextBlock Text="Personnel_Name" TextAlignment="Center" FontSize="16" Width="150" Margin="5" Height="30"/>
                <TextBox Text="{Binding Personnel_Name}" Width="150" Margin="5" Height="30"/>
                <TextBlock Text="Personnel_MiddleName" TextAlignment="Center" FontSize="16" Width="150" Margin="5" Height="30"/>
                <TextBox Text="{Binding Personnel_MiddleName}" Width="150" Margin="5" Height="30"/>
                <TextBlock Text="Personnel_LastName" TextAlignment="Center" FontSize="16" Width="150" Margin="5" Height="30"/>
                <TextBox Text="{Binding Personnel_LastName}" Width="150" Margin="5" Height="30"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Personnel_PhoneNumber" TextAlignment="Center" FontSize="16" Width="150" Margin="5" Height="30"/>
                <TextBox Text="{Binding Personnel_PhoneNumber}" Width="150" Margin="5" Height="30"/>
                <TextBlock Text="Personnel_Address" TextAlignment="Center" FontSize="16" Width="150" Margin="5" Height="30"/>
                <TextBox Text="{Binding Personnel_Address}" Width="150" Margin="5" Height="30"/>
                <Button Content="Сохранить" Width="150" Height="30" Margin="5,45
                        ,5,5" Click="Save_Click"/>
                <Button Content="Отмена" Width="150" Height="30" Margin="5" Click="Cancel_Click"/>
            </StackPanel>
            <StackPanel DockPanel.Dock="Right">
                <TextBlock Text="Personnel_Status" TextAlignment="Center" FontSize="16" Width="150" Margin="5" Height="30"/>
                <TextBox Text="{Binding Personnel_Status}" Width="150" Margin="5" Height="30"/>
                <TextBlock Text="Personnel_Title" TextAlignment="Center" FontSize="16" Width="150" Margin="5" Height="30"/>
                <TextBox Text="{Binding Personnel_Title}" Width="150" Margin="5" Height="30"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Page>
