<Window x:Class="PRKTK030225.Windows.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRKTK030225.Windows"
        mc:Ignorable="d"
        Title="AuthWindow" Height="450" Width="300" WindowStyle="None" AllowsTransparency="True" ResizeMode="NoResize" MouseDown="Window_MouseDown"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="2"/>
        <StackPanel VerticalAlignment="Center">
            <TextBox Width="150" Margin="5" Height="30" FontSize="16" x:Name="L"/>
            <PasswordBox Width="150" Margin="5" Height="30" FontSize="16" x:Name="P"/>
            <Button Content="Войти" Width="75" Margin="5" Height="25" Click="Login_Click"/>
        </StackPanel>
        <Image Source="../res/cross.png" Width="30" Height="30" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="10" MouseDown="Image_MouseDown"/>
    </Grid>
</Window>
