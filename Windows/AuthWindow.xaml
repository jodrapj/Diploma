<Window x:Class="PRKTK030225.Windows.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRKTK030225.Windows"
        mc:Ignorable="d"
        Title="AuthWindow" Height="450" Width="300" WindowStyle="None" AllowsTransparency="True" ResizeMode="NoResize" MouseDown="Window_MouseDown"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBox Width="150" Margin="5" Height="30"/>
            <TextBox Width="150" Margin="5" Height="30"/>
            <Button Content="Войти" Width="75" Margin="5" Height="25" Click="Login_Click"/>
        </StackPanel>
        <Button Padding="0" Height="30" Background="Transparent" BorderThickness="0" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10"
            Width="{Binding RelativeSource={x:Static RelativeSource.Self}, Path=ActualHeight}" 
            HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
            FontSize="25" Content="x" Click="Button_Exit" />
    </Grid>
</Window>
